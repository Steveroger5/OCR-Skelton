<%- include ("partials/header") %>

<div class="container">
<h1 class="text-center">
	Edit Form <i class="edit icon"></i>
</h1>
	<div style="width:30%; margin: 70px auto;">
<form action="/myform/update/<%= data._id %>" method="post">
	<div class="form-group"><strong>Name</strong><i class="arrow right icon"></i>
		<span>Original:</span>
		<input class="form-control" type="text" value="<%= data.name %>"> 
		<span>Modfied:</span>
		<input class="form-control" type="text" name="name">
	</div>
	<div class="form-group"><strong>Rollno</strong><i class="arrow right icon"></i>
		<span>Original:</span>
		<input class="form-control" type="text" value="<%= data.rollno%>" min="1000" step="100">
		<span>Modfied:</span>
		<input class="form-control" type="text" name="rollno">
	</div>
	<div class="form-group"><strong>Department</strong><i class="arrow right icon"></i>
		<span>Original:</span>
		<input class="form-control" type="text" name="data[dept]" value="<%= data.dept %>">
		<span>Modfied:</span>
		<input class="form-control" type="text" name="dept">
	</div>
	<div class="form-group">
		<button class="btn btn-lg btn-primary btn-block" type="submit" >Submit
	</button>
	</div>

</form>
<a href="/myform/<%= data._id %>">Go Back</a>		
	</div>	
</div>
<%- include ("partials/footer") %>